{
  "productName": "novel",
  "version": "0.0.0",
  "identifier": "kamilee.cn",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420/pages/main/index.html",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "novel",
        "width": 400,
        "height": 30,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "icons/icon.ico"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
